<UserControl x:Class="Oqat.ViewModel.VM_Presentation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" x:Name="playerPanel" Height="{Binding }" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" x:Name="gridPlayer1" Margin="10"/>
                <Grid Grid.Column="1" x:Name="gridPlayer2" Margin="10"/>
        </Grid>
        <Grid Grid.Row="1" x:Name="otherPanel" Margin="10"/>
        
        <StackPanel Grid.Row="2" x:Name="gridMacro" Margin="10">
            <WrapPanel>
                <Button Name="bttProcessMacro" Click="bttProcessMacro_Click">Macro ausführen</Button>
            </WrapPanel>
        </StackPanel>
        
    </Grid>
    
</UserControl>