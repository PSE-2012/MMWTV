<UserControl x:Class="Oqat.ViewModel.VM_Presentation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Name="playerPanel" Margin="10">
            <Grid Name="gridPlayer1" Margin="10"></Grid>
            <Grid Name="gridPlayer2" Margin="10"></Grid>
        </StackPanel>
        <StackPanel Orientation="Vertical" Name="otherPanel" Margin="10">
        </StackPanel>
        <WrapPanel>
            <Button Name="bttProcessMacro" Click="bttProcessMacro_Click">Macro ausführen</Button>
        </WrapPanel>
        <Grid Name="gridMacro" Margin="10"/>
    </StackPanel>
</UserControl>
