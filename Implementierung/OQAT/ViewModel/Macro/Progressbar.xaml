<Window x:Class="Oqat.ViewModel.Macro.Progressbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="299" Height="71">

    <Grid x:Name="grid">
        <StatusBar Name="sbar" 
           VerticalAlignment="Bottom" Height="32">

            <StatusBarItem>
                <TextBlock>Processing Video</TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar Width="100" Height="20"
                 Name="progressBar1">
                    
                </ProgressBar>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="percent" Width="36"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
