<Window x:Class="Oqat.ViewModel.VM_Oqat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Objective Quality Assessment Toolkit" Height="768" Width="1024">
    <DockPanel>
        <Menu IsMainMenu="True">
            <MenuItem Header="ToggleView">
                <MenuItem Header="FilterView" Name="miFilterView" Click="MenuItem1_Click" />
                <MenuItem Header="MetricView" Name="miMetricView" Click="MenuItem2_Click" />
                <MenuItem Header="AnalyseView" Name="miAnalyseView" Click="MenuItem3_Click" />
            </MenuItem>
        </Menu>
        <Grid x:Name="menuPanel" DockPanel.Dock="Top">
        </Grid>
        <Grid x:Name="projectExplorerPanel" DockPanel.Dock="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid x:Name="presentationPanel" DockPanel.Dock="Top"/>
        <Grid x:Name="pluginListsPanel" DockPanel.Dock="Right"/>
    </DockPanel>
</Window>
