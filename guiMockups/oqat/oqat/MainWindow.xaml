                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <wfi:WindowsFormsHost Grid.RowSpan="5" Grid.ColumnSpan="5">
                        <aforge:VideoSourcePlayer x:Name="sourcePlayer" AutoSizeControl="True" BackColor="ControlDarkDark"
                                                  ForeColor="White" ></aforge:VideoSourcePlayer>
                    </wfi:WindowsFormsHost>
                     <WrapPanel Grid.Row="5" Grid.ColumnSpan="5" Orientation="Vertical">
                        <!--<ListView x:Name="DropList"
                                  PreviewMouseLeftButtonDown="List_PreviewMouseLeftButtonDown"
