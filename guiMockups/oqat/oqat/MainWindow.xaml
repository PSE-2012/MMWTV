                </MenuItem>
                <MenuItem Header="_Bearbeiten" />
                <MenuItem Header="_Hilfe" />
            </Menu>

        <ToolBar DockPanel.Dock="Top" Height="40">
                <Button>
                    <Image Source="Resources\Images\fileOpen.png"/>
                </Button>
                <Separator />
                <Button>
                    <Image Source="Resources\Images\save.png" />
