<Window x:Class="oqat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Objective Quality Assessment Toolkit" Height="768" Width="1024">
        <!--Background="dimgray"-->
   
        <DockPanel>
            <Menu DockPanel.Dock="Top" Uid="MainMenu">
                <MenuItem Uid="MainMenu_Project">
                    <MenuItem Uid="MainMenu_Project_new" />
                    <MenuItem Uid="MainMenu_Project_open" />
                    <Separator />
                    <MenuItem Uid="MainMenu_Project_save" />
                    <Separator />
                    <MenuItem Uid="_Beenden" />
                </MenuItem>
                <MenuItem Header="_Bearbeiten" />
            <MenuItem Name="Options"></MenuItem>
                <MenuItem Header="_Hilfe" />
                
            </Menu>

        <ToolBar DockPanel.Dock="Top" Height="40">
                <Button>
                    <Image Source="Resources\Images\fileOpen.png"/>
                </Button>
                <Separator />
                <Button>
                    <Image Source="Resources\Images\save.png" />
                </Button>
                <Separator/>
                <Button>
                    <Image Source="Resources\Images\fileNew.png" />
                </Button>
                <Separator/>
                <Button>
                    <Image Source="Resources\Images\add.png" />
                </Button>
                <Separator />
                <Button>
                    <Image Source="Resources\Images\batch.png" />
                </Button>
                <Separator/>
                <Button>
                    <Image Source="Resources\Images\play.png" />
                </Button>
                <Separator/>


                <Button>
                    <Image Source="Resources\Images\options.png" />
                </Button>
