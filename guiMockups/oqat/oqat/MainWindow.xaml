                    <ComboBoxItem>Arial</ComboBoxItem>
                    <ComboBoxItem>Courier</ComboBoxItem>
                    <ComboBoxItem>Windings</ComboBoxItem>
                </ComboBox>-->
            </ToolBar>
        <TabControl DockPanel.Dock="Right" TabStripPlacement="Top" Margin="10,10,5,5" Width="180">
            <TabItem Header="FiltList" Height="30" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TreeView Name="treeView3" Grid.RowSpan="4">
                    <TreeViewItem Header="Faltungsfilter">
                        <TreeViewItem Header="weichzeichner" />
                        <TreeViewItem Header="scharfzeichner" />
                        <TreeViewItem Header="Sobel-Filter" />
                    </TreeViewItem>
                    <TreeViewItem Header="Rauschgenerator">
                        <TreeViewItem Header="Chrominanzrauschen" />
                        <TreeViewItem Header="Luminanzrauschen"/>
                        </TreeViewItem>
                </TreeView>
                <WrapPanel Grid.Row="4" Orientation="Vertical">
                        <Label Margin="4,0,0,0">
                            Name:
                        </Label>
                        <TextBox Margin="4,0,0,0">
                            foreman_blurr
                        </TextBox>
                        <Button VerticalAlignment="Bottom">
                            Anwenden
                        </Button>
                    </WrapPanel>
                </Grid>
            </TabItem>
            <TabItem Header="MetriList">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TreeView Name="treeView4" Grid.RowSpan="4">
                        <TreeViewItem Header="MSE"/>
                        <TreeViewItem Header="SNR"/>
                        <TreeViewItem Header="PSNR"/>
                    </TreeView>
                    <WrapPanel Grid.Row="4" Orientation="Vertical">
                        <Label Margin="4,0,0,0">
                            Name:
                        </Label>
                        <TextBox Margin="4,0,0,0">
                            h264_foreman_blur_analysis
                        </TextBox>
                        <Button VerticalAlignment="Bottom">
                            Anwenden
                        </Button>
                    </WrapPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <TabControl DockPanel.Dock="Left" TabStripPlacement="Top" Margin="10,10,5,5">
                <TabItem Header="SmartTree" Height="30" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TreeView Name="treeView1" Grid.RowSpan="4">
                    <TreeViewItem Header="foremen.yuv">
                        <TreeViewItem Header="foremanRauschenWeich.yuv">
                            <TreeViewItem Header="foremanRauschenWeichEncoded.yuv" />
                        </TreeViewItem>
                        <!--<TreeViewItem Header="sharpen">
                            <TreeViewItem Header="posterize">
                                <TreeViewItem Header="Processed"/>
                            </TreeViewItem>
                        </TreeViewItem>-->
                    </TreeViewItem>
                </TreeView>
                    <WrapPanel Grid.Row="4" Orientation="Vertical">
                    <Label VerticalAlignment="Top">
                        Name = foreman.yuv
                    </Label>
                        <Label VerticalAlignment="Top">
                            Size = 312 MB
                        </Label>
                        <Label VerticalAlignment="Top">
                            Resolution = 640 x 480
                        </Label>
                    </WrapPanel>
                </Grid>
            </TabItem>
                <TabItem Header="Dateiexplorer">
                    <TreeView Name="treeView2">
                        <TreeViewItem Header="Asien">
                            <TreeViewItem Header="China" />
                            <TreeViewItem Header="Vietnam" />
                            <TreeViewItem Header="Philippinen" />
                        </TreeViewItem>
                        <TreeViewItem Header="Europa">
                            <TreeViewItem Header="Deutschland">
                                <TreeViewItem Header="NRW" />
                                <TreeViewItem Header="Hessen" />
                            </TreeViewItem>
                            <TreeViewItem Header="Italien" />
                            <TreeViewItem Header="Österreich" />
                        </TreeViewItem>
                    </TreeView>
                </TabItem>
            </TabControl>
