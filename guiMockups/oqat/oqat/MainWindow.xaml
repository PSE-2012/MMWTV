                    <ComboBoxItem>Arial</ComboBoxItem>
                    <ComboBoxItem>Courier</ComboBoxItem>
                    <ComboBoxItem>Windings</ComboBoxItem>
                </ComboBox>-->
            </ToolBar>
        <TabControl DockPanel.Dock="Right" TabStripPlacement="Top" Margin="10,10,5,5" Width="180">
            <TabItem Header="FiltList" Height="30" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TreeView Name="treeView3" Grid.RowSpan="4"></TreeView>
                <WrapPanel Grid.Row="4" Orientation="Vertical">
                        <Label Margin="4,0,0,0">
                            Name:
                        </Label>
                        <TextBox Margin="4,0,0,0">
                            foreman_blurr
                        </TextBox>
                        <Button VerticalAlignment="Bottom" Click="Button_Click_1">
                            Anwenden
                        </Button>
                    </WrapPanel>
                </Grid>
            </TabItem>
            <TabItem Header="MetriList">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TreeView Name="treeView4" Grid.RowSpan="4"></TreeView>
                    <WrapPanel Grid.Row="4" Orientation="Vertical">
                        <Button VerticalAlignment="Bottom">
                            Anwenden
                        </Button>
                    </WrapPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <TabControl x:Name="ProjectExplorer" DockPanel.Dock="Left" TabStripPlacement="Top" Margin="10,10,5,5">
                <TabItem Header="SmartTree" Height="30" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TreeView Name="treeView1" Grid.RowSpan="4"></TreeView>
                    <WrapPanel Grid.Row="4" Orientation="Vertical"></WrapPanel>
                </Grid>
            </TabItem>
                <TabItem Header="Dateiexplorer">
                    <TreeView Name="treeView2"></TreeView>
                </TabItem>
            </TabControl>
